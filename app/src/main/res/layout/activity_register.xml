<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.android.myapp.shopmapaplication.RegisterActivity">

    <TextView
        android:text="お店の詳細を入力してください"
        android:id="@+id/title"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Name"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title"
        android:text="店舗名"/>

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/NameEdit"
        android:textSize="15dp"
        android:layout_below="@+id/Name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Add"
        android:textSize="20dp"
        android:layout_below="@+id/NameEdit"
        android:text="住所"/>

    <EditText
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/AddEdit"
        android:textSize="15dp"
        android:layout_below="@+id/Add"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Kind"
        android:textSize="20dp"
        android:layout_below="@+id/AddEdit"
        android:text="カテゴリ"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/KindEdit"
        android:textSize="15dp"
        android:layout_below="@+id/Kind"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Menu"
        android:textSize="20dp"
        android:layout_below="@+id/KindEdit"
        android:text="おすすめ"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MenuEdit"
        android:textSize="15dp"
        android:layout_below="@+id/Menu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Contents"
        android:textSize="20dp"
        android:layout_below="@+id/MenuEdit"
        android:text="情報"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ContentsEdit"
        android:textSize="15dp"
        android:layout_below="@+id/Contents"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="登録"
        android:id="@+id/Register_Button"
        android:layout_below="@+id/ContentsEdit"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="キャンセル"
        android:id="@+id/Cancel_Button"
        android:layout_below="@+id/Register_Button"
        android:layout_marginTop="10dp" />

</RelativeLayout>